<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhiteOpacity50</item>
        <item name="colorAccent">@color/colorWhite</item>

        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TextAppearance.AvenirBook" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/AvenirLTStd-Book.otf</item>
    </style>

    <style name="TextAppearance.AvenirBlack" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/AvenirLTStd-Black.otf</item>
    </style>

    <style name="TextAppearance.AvenirRoman" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/AvenirLTStd-Roman.otf</item>
    </style>

    <style name="TextAppearance.AvenirLight" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/AvenirLTStd-Light.otf</item>
    </style>

    <!--<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

    <style name="ThemeOverlay.AppCompat.navTheme">

        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/colorPink</item>

        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">@color/colorPink</item>

    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<com.duybui.doapp.utils.CollapsibleToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="false"
    android:minHeight="50dp"
    android:orientation="vertical"
    app:layoutDescription="@xml/scene_home_header"
    app:layout_scrollFlags="scroll|enterAlways|snap|exitUntilCollapsed">


    <TextView
        android:id="@+id/tvWeekday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:gravity="center"
        android:text="Wednesday"
        android:textAppearance="@style/TextAppearance.AvenirLight"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_30sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="March 18, 2019"
        android:textAppearance="@style/TextAppearance.AvenirBook"
        android:textColor="@color/colorWhiteOpacity50"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWeekday" />

    <TextView
        android:id="@+id/viewCircle"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/background_circle"
        android:gravity="center"
        android:text="6"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_50sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDay" />
</com.duybui.doapp.utils.CollapsibleToolbar>